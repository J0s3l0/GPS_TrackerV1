        android:layout_marginBottom="30dp"/-->

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            style="@style/editTextLogin"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/login_num_emp"
            android:hint="@string/login_no_user"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            style="@style/editTextLogin"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_pass"
            android:hint="@string/login_pass"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/login_txt_error"
            style="@style/txtErrorLogin"
            android:text="@string/login_txt_error"
            android:layout_marginBottom="20dp"
            android:visibility="gone"/>

        <Button
            style="@style/buttonLogin"
            android:text="@string/login_access"
            android:id="@+id/login_btn_access"
            android:onClick="homeAction"
            android:layout_marginTop="40dp"/>

    </LinearLayout>



